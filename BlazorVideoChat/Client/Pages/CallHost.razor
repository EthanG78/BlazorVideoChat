@page "/host"
@inherits CallHostBase
@attribute [Authorize]

<div class="container">
    <div class="row">
        <h3>Host a call</h3>
    </div>
    @if (CommModel == null)
    {
        <p>Generating user identity and token...</p>
    }

    <div class="row">
        <label for="basic-url">Select a call request to host</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">
                    <span class="oi oi-person" aria-hidden="true"></span>
                </span>

            </div>
            <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3" @bind-value="CalleeInput">
        </div>
    </div>
    <div class="row">
        <button type="button" class="btn btn-primary ml-2 mb-2" disabled="@CallButtonDisabled" @onclick="Call">Call</button>
        <button type="button" class="btn btn-primary ml-2 mb-2" disabled="@HangUpButtonDisabled" @onclick="HangUp">Hangup</button>
    </div>
    <div class="row">
        <div class="col">
            <div class="video-container">
                <div @ref="MyVideo" class="video"></div>
            </div>
        </div>
        <div class="col">
            <div class="video-container">
                <div @ref="RemoteVideo" class="video"></div>
            </div>
        </div>
    </div>
</div>